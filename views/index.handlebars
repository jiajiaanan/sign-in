<div class="container mt-3">
  <h1 class="text-center my-5">Account Login</h1>
  <div class="mx-auto text-center" style="width: 18rem;">

    <form action="/" method="POST">

      <input type="text" class="form-control my-3" name="email" placeholder="Email" required>
      <input type="password" class="form-control my-3" name="password" placeholder="Password" required>

      {{#if invalidAlert}} <h5 class="text-secondary">invalid email or password!</h5> {{/if}}

      <button class="btn btn-secondary my-3" type="submit">Sign in</button>
    </form>
  </div>

</div>